{
  "name": "wordpress-nextjs-test-deps",
  "version": "1.0.0",
  "description": "Testing dependencies for WordPress-Next.js integration",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^1.3.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["./src/__tests__/setup.ts"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js)",
      "**/*.(test|spec).(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.(ts|tsx|js)",
      "!src/**/*.d.ts",
      "!src/__tests__/**/*",
      "!src/**/*.stories.(ts|tsx|js)",
      "!src/**/*.mock.(ts|tsx|js)"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}